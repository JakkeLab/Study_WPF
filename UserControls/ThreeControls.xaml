<UserControl x:Class="_03_Controlers.UserControls.ThreeControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_03_Controlers.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="200"
             x:Name="root">
    <Grid>
        <Button Command="{Binding MyCommand, ElementName=root}" Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding MyText, ElementName=root}" HorizontalAlignment="Left" Margin="12,35,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
